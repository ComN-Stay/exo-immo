{% extends '@EasyAdmin/page/content.html.twig' %}

{% block content_title %}Tableau de bord
{% endblock %}


{% block main %}
	<div class="d-flex justify-content-around">
		<div class="card" style="width:40%">
			<div class="card-header">
				<h5 class="card-title text-black">Biens par type</h5>
			</div>
			<div class="card-body">
				<table class="table datagrid text-black">
					<thead>
						<tr>
							<th class="header-for-field-text text-black">Type de bien</th>
							<th class="header-for-field-text text-black">Quantité</th>
						</tr>
					</thead>
					<thead></thead>
					<tbody>
						{% for type in types %}
							<tr>
								<td>{{ type.name }}</td>
								<td>{{ type.qte }}</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
			</div>
		</div>

		<div class="card" style="width:40%">
			<div class="card-header">
				<h5 class="card-title text-black">Biens par transaction</h5>
			</div>
			<div class="card-body">
				<table class="table datagrid text-black">
					<thead>
						<tr>
							<th class="header-for-field-text text-black">Type de transaction</th>
							<th class="header-for-field-text text-black">Quantité</th>
						</tr>
					</thead>
					<thead></thead>
					<tbody>
						{% for transaction in transactions %}
							<tr>
								<td>{{ transaction.name }}</td>
								<td>{{ transaction.qte }}</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
			</div>
		</div>

	</div>

{% endblock %}
