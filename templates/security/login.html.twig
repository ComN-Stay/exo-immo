{% extends '@EasyAdmin/page/login_minimal.html.twig' %}

{% block body_class 'page-login' %}
{% block page_title %}Log in!
{% endblock %}

{% block wrapper_wrapper %}
	<div class="login-wrapper">

		<section class="content">

			{% if error|default(false) %}
				<div class="w-100 alert alert-danger rounded mb-3">
					<i class="fas fa-times-circle mr-1"></i>
					{{ error.messageKey|trans(error.messageData, 'security') }}
				</div>
			{% endif %}

			<form method="post" action="{{ path('admin_login') }}">

				<h1 class="h3 mb-3 font-weight-normal">Administration</h1>
				<div class="form-group">
					<label class="form-control-label required" for="inputEmail">Email</label>
					<div class="form-widget">
						<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus autocomplete="email">
					</div>
				</div>

				<div class="form-group">
					<label class="form-control-label required" for="password">Mot de passe</label>
					<div class="form-widget">
						<input type="password" id="inputPassword" name="password" class="form-control" required autocomplete="current-password">
					</div>

					<div class="form-text">
						<a href="{{ forgot_password_path|default('#') }}">Mot de passe oubli√©</a>
					</div>
				</div>
				<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

				<div class="checkbox mb-3">
					<label>
						<input type="checkbox" name="_remember_me" checked>
						Se rappeler de moi quelques jours
					</label>
				</div>

				<button class="btn btn-lg btn-primary" type="submit">
					Connexion
				</button>
			</form>
		</section>
	</div>
{% endblock %}
